<h1>ブログ一覧</h1>

<table>
  <tr>
    <td>タイトル</td>
    <td>本文</td>
  </tr>



  <% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細', blog_path(blog.id) %></td>
    <td><%= link_to '編集', edit_blog_path(blog.id), data:{confirm: '編集します'} %></td>
    <td><%= link_to '削除', blog_path(blog.id), method: :delete, data:{confirm: '削除します'} %></td>
  </tr>
  <% end %>
</table>
